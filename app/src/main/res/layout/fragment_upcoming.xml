<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upcoming_contentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_favorite_shows_image_bg_color"
    >

    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/upcoming_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="3"
        tools:listitem="@layout/cardview_upcoming_show"
        tools:visibility="gone"
        />

    <ImageView
        android:id="@+id/noFavoritesSelectedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_no_favorite_shows"
        />

</android.support.constraint.ConstraintLayout>